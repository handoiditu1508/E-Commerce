@model CustomerUpdateViewModel

<a href="#" @*asp-action="ChangePassword" asp-controller="Customer" asp-route-customerId="@Model.Id"*@>click here to change customer's password</a>

<form asp-action="ChangeActive" asp-controller="Customer" method="put">
	<input type="hidden" name="customerId" value="@Model.Id" />

	<div class="form-group">
		<div class="input-group">
			<div class="input-group-prepend">
				<label class="control-label input-group-text">Customer's Status</label>
			</div>
			<input @(Model.Active ? "checked" : "") class="submitOnChange" name="active"
				   type="checkbox" data-toggle="toggle" value="true"
				   error="Something went wrong while changing user active"
				   data-onstyle="success" data-offstyle="danger" data-size="small"
				   data-on="<i class='fas fa-lock-open'></i>"
				   data-off="<i class='fa fa-lock'></i>" />
		</div>
	</div>
</form>

<fieldset class="border rounded pl-3 pr-3 pb-3 m-3">
	<legend>Edit Customer's Infomations:</legend>
	<form asp-action="Edit" asp-controller="Customer" method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-row">
			<div class="form-group col-md-4">
				<div class="input-group">
					<div class="input-group-prepend">
						<label asp-for="Id" class="control-label input-group-text"></label>
					</div>
					<input asp-for="Id" readonly />
				</div>
			</div>
		</div>
		<input asp-for="Active" type="hidden" />
		<div class="form-row">
			<div class="form-group col-md-4">
				<div class="input-group">
					<div class="input-group-prepend">
						<label asp-for="UpdateModel.FirstName" class="control-label input-group-text"></label>
					</div>
					<input asp-for="UpdateModel.FirstName" class="form-control" />
				</div>
				<span asp-validation-for="UpdateModel.FirstName" class="text-danger"></span>
			</div>
			<div class="form-group col-md-4">
				<div class="input-group">
					<div class="input-group-prepend">
						<label asp-for="UpdateModel.MiddleName" class="control-label input-group-text"></label>
					</div>
					<input asp-for="UpdateModel.MiddleName" class="form-control" />
				</div>
				<span asp-validation-for="UpdateModel.MiddleName" class="text-danger"></span>
			</div>
			<div class="form-group col-md-4">
				<div class="input-group">
					<div class="input-group-prepend">
						<label asp-for="UpdateModel.LastName" class="control-label input-group-text"></label>
					</div>
					<input asp-for="UpdateModel.LastName" class="form-control" />
				</div>
				<span asp-validation-for="UpdateModel.LastName" class="text-danger"></span>
			</div>
		</div>
		<input type="submit" value="Save" class="btn btn-success" />
	</form>
</fieldset>

@section Scripts{
	<script src="~/js/submit-on-change.js"></script>
	@await Html.PartialAsync("BootstrapToggle-Scripts")
}

@section Styles{
	@await Html.PartialAsync("BootstrapToggle-Styles")
}