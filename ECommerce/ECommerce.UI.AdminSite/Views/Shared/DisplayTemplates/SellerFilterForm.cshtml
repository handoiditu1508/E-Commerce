@model SellerSearchModel

<fieldset class="border rounded">
	<legend>Find Seller By:</legend>
	<form asp-action="Search" asp-controller="Seller" method="get">
		<div class="form-row">
			<div class="form-group col-md-6">
				<label class="control-label">Name</label>
				<input class="form-control" type="text" name="name" value="@Model.Name" />
			</div>
			<div class="form-group col-md-4">
				<label class="control-label">Phone Number</label>
				<input class="form-control" type="number" name="phoneNumber" value="@Model.PhoneNumber" />
			</div>
			<div class="form-group col-md-2">
				<label class="control-label">Status</label>
				<select class="form-control" name="status" enum-type="typeof(SellerStatus)" selected="Model.Status" option-label=""></select>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-6">
				<label class="control-label">Email</label>
				<input class="form-control" type="text" name="email" value="@Model.Email" />
			</div>
		</div>
		<input type="submit" value="Search" class="btn btn-primary" />
	</form>
</fieldset>