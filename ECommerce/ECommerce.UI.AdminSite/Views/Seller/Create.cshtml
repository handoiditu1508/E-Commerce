@model SellerAddViewModel

<form method="post" class="m-3">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
		<label asp-for="Seller.StoreName" class="control-label"></label>
		<input asp-for="Seller.StoreName" class="form-control" />
		<span asp-validation-for="Seller.StoreName" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Seller.PhoneNumber" class="control-label"></label>
		<input asp-for="Seller.PhoneNumber" class="form-control" />
		<span asp-validation-for="Seller.PhoneNumber" class="text-danger"></span>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label asp-for="Seller.Email" class="control-label"></label>
			<input asp-for="Seller.Email" class="form-control" />
			<span asp-validation-for="Seller.Email" class="text-danger"></span>
		</div>
		<div class="form-group col-md-6">
			<div class="form-row">
				<label asp-for="Seller.Password" class="control-label"></label>
				<input asp-for="Seller.Password" class="form-control" />
				<span asp-validation-for="Seller.Password" class="text-danger"></span>
			</div>
			<div class="form-row">
				<label asp-for="ConfirmPassword" class="control-label"></label>
				<input asp-for="ConfirmPassword" class="form-control" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="form-group">
		<input type="submit" value="Signup" class="btn btn-primary" />
	</div>
</form>