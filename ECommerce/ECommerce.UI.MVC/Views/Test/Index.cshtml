@model IEnumerable<FileContent>

<form asp-action="Index" method="post" enctype="multipart/form-data">
	<div class="form-group">
		<div class="file-loading">
			<input id="registerProductFileInput" class="file" name="images" type="file" multiple />
		</div>
	</div>
	<div class="form-group">
		<input type="submit" class="btn btn-success" value="Submit" data-min-file-count="1" />
	</div>
</form>

<script type="text/javascript">
	//upload image
	$('#registerProductFileInput').fileinput({
		allowedFileExtensions: ['jpg', 'png', 'gif', 'jpeg'],
		removeClass: 'btn btn-danger',
		showUpload: false,
		allowedFileTypes: ['image'],
		maxFileSize: '2000',
		theme: 'fas',
		browseOnZoneClick: 'true'
	});
</script>